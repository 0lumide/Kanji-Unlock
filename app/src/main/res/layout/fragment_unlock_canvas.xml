<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/canvas_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="50dp"
    xmlns:svgimageview="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/stroke_progress"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_marginBottom="-20dp"
        android:layout_above="@+id/canvas"
        android:layout_alignRight="@+id/canvas"
        android:layout_alignLeft="@+id/canvas"
        android:id="@+id/progress_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@+id/canvas"
        android:layout_marginTop="-20dp"
        android:text="@string/write_instructions"
        android:layout_alignRight="@+id/canvas"
        android:layout_alignLeft="@+id/canvas"
        android:gravity="center"
        android:textSize="17sp"
        android:id="@+id/draw_instruc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:padding="0dp"
        android:layout_margin="0dp"
        android:background="@color/canvas_background"
        android:layout_alignBottom="@+id/canvas"
        android:layout_alignRight="@+id/canvas"
        android:layout_alignLeft="@+id/canvas"
        android:layout_alignTop="@+id/canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.caverock.androidsvg.SVGImageView
        android:padding="0dp"
        android:alpha="0.2"
        android:layout_margin="0dp"
        android:id="@+id/grid_background"
        android:layout_alignBottom="@+id/canvas"
        android:layout_alignRight="@+id/canvas"
        android:layout_alignLeft="@+id/canvas"
        android:layout_alignTop="@+id/canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.caverock.androidsvg.SVGImageView
        android:alpha="0.2"
        android:layout_alignBottom="@+id/canvas"
        android:layout_alignRight="@+id/canvas"
        android:layout_alignLeft="@+id/canvas"
        android:layout_alignTop="@+id/canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:id="@+id/kanji_background"/>
    <co.mide.kanjiunlock.DrawCanvas
        android:padding="0dp"
        android:layout_above="@+id/space"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.widget.Space
        android:id="@+id/space"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
</RelativeLayout>