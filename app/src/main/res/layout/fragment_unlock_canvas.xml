<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/canvas_parent"
    android:paddingBottom="80dp"
    xmlns:svgimageview="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <TextView
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="17sp"
        android:id="@+id/draw_instruc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_alignBottom="@+id/canvas"
        android:background="@color/canvas_background"
        android:layout_width="250dp"
        android:layout_height="250dp" />
    <com.caverock.androidsvg.SVGImageView
        android:layout_alignBottom="@+id/canvas"
        android:padding="0dp"
        android:alpha="0.5"
        android:layout_margin="0dp"
        android:id="@+id/grid_background"
        android:layout_width="250dp"
        android:layout_height="250dp"/>
    <com.caverock.androidsvg.SVGImageView
        android:alpha="0.2"
        android:layout_alignBottom="@+id/canvas"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:id="@+id/kanji_background"
        android:layout_width="250dp"
        android:layout_height="250dp"/>
    <co.mide.kanjiunlock.DrawCanvas
        android:padding="0dp"
        android:layout_above="@+id/draw_instruc"
        android:layout_margin="0dp"
        android:id="@+id/canvas"
        android:layout_width="250dp"
        android:layout_height="250dp"/>
</RelativeLayout>